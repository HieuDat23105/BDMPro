@model BDMPro.Models.SupplierViewModel
@using BDMPro.CustomHelper
@using BDMPro.Models;
@using BDMPro.Resources
@{
    ViewBag.Title = $"{Resource.View} {Resource.Supplier}";
    ViewBag.ModuleName = Resource.Supplier;
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th,
    td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<div class="row">
    <div class="col-12">
        <div style="--bs-breadcrumb-divider: '>';">
            <ol class="breadcrumb m-0">
                <li class="breadcrumb-item fw-normal"><a class="color-primarycolor opacity-50"
                        href="@Url.Action("index")">@ViewBag.ModuleName @Resource.Management</a></li>
                <li class="breadcrumb-item fw-normal active">@ViewBag.Title</li>
            </ol>
        </div>
        <div class="page-title-box d-sm-flex align-items-center justify-content-between pt-2">
            <h4 class="pagetitle mb-sm-0 fw600">@ViewBag.Title</h4>
            <div class="d-flex">
                <span class="fs-20"><a href="@Url.Action("edit", new { Id = Model.SupplierId })"><i
                            class="fa-solid fa-edit text-edit hover-color-secondarycolor" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="@Resource.Edit @Resource.Supplier"></i></a></span>
                <span class="fs-20">&nbsp; <i
                        onclick="triggerDeleteConfirmationModal('@Html.Raw(Model.SupplierName.Replace("'", "\\&#39;").Replace("\"", "\\&#34;"))','@Url.Action("delete", new { id = Model.SupplierId })')"
                        class="fa-solid fa-trash-can text-delete cursor-pointer hover-color-secondarycolor"
                        data-bs-toggle="tooltip" data-bs-placement="top" title="@Resource.Delete"></i></span>
            </div>
        </div>
    </div>
</div>
@Html.HiddenFor(m => m.SupplierId)
<section class="section mt-3">
    <div class="bg-white rounded p-3 p-lg-4 p-xl-5 shadow mt-4">
        <h2 class="fs-20 fw600 mb-4">@Resource.SupplierInformation</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.SupplierName, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.SupplierName, new
                            {
                                htmlAttributes = new
                                {
                                    @class =
                                "form-control d-block"
                                }
                            })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.SupplierStatusName, htmlAttributes: new { @class = "fw600" })
                    </div>
                    <div>@Html.DisplayFor(model => model.SupplierStatusName, new
                            {
                                htmlAttributes = new
                                {
                                    @class =
                                "form-control"
                                }
                            })</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.Address, new
                            {
                                htmlAttributes = new { @class = "form-control" }
                            })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.EmailAddress, new
                            {
                                htmlAttributes = new
                                {
                                    @class =
                                "form-control"
                                }
                            })</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.PhoneNumber, new
                            {
                                htmlAttributes = new
                                {
                                    @class =
                                "form-control"
                                }
                            })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "fw600" })</div>
                    <div>@Html.DisplayFor(model => model.Notes, new
                            {
                                htmlAttributes = new { @class = "form-control" }
                            })</div>
                </div>
            </div>
        </div>
    </div>

    <div class="bg-white rounded p-3 p-lg-4 p-xl-5 shadow mt-4">
        <h2 class="fs-20 fw600 mb-4">@Resource.ContactInformation</h2>
        <table>
            <thead>
                <tr>
                    <th class="fw600">STT</th>
                    <th class="fw600">Supplier Contact</th>
                    <th class="fw600">Email</th>
                    <th class="fw600">Phone</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.SupplierContactNameList.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td> <!-- Thêm cột STT, bắt đầu từ 1 -->
                        <td>@Html.DisplayFor(model => model.SupplierContactNameList[i], new
                                {
                                    htmlAttributes = new
                                    {
                                        @class
                                     = "form-control"
                                    }
                                })</td>
                        <td>@Html.DisplayFor(model => model.SupplierContactEmail[i], new
                                {
                                    htmlAttributes = new
                                    {
                                        @class =
                                     "form-control"
                                    }
                                })</td>
                        <td>@Html.DisplayFor(model => model.SupplierContactPhone[i], new
                                {
                                    htmlAttributes = new
                                    {
                                        @class =
                                     "form-control"
                                    }
                                })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div class="bg-white rounded p-3 p-lg-4 p-xl-5 shadow mt-4">
        <h2 class="fs-20 fw600 mb-4">@Resource.OtherInformation</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.CreatedAndModified.CreatedByName, htmlAttributes: new
                            {
                                @class =
                                "fw600"
                            })</div>
                    <div>@Html.DisplayFor(model => model.CreatedAndModified.CreatedByName, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control"
                                }
                            })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.CreatedAndModified.FormattedCreatedOn, htmlAttributes: new
                            {
                                @class = "fw600"
                            })</div>
                    <div class="datetimetext">@Html.DisplayFor(model => model.CreatedAndModified.FormattedCreatedOn, new
                            { htmlAttributes = new { @class = "form-control" } })</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.CreatedAndModified.ModifiedByName, htmlAttributes: new
                            {
                                @class =
                                "fw600"
                            })</div>
                    <div>@Html.DisplayFor(model => model.CreatedAndModified.ModifiedByName, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control"
                                }
                            })</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3 text-break">
                    <div>@Html.LabelFor(model => model.CreatedAndModified.FormattedModifiedOn, htmlAttributes: new
                            {
                                @class = "fw600"
                            })</div>
                    <div class="datetimetext">@Html.DisplayFor(model => model.CreatedAndModified.FormattedModifiedOn,
                        new { htmlAttributes = new { @class = "form-control" } })</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <a class="btn form-btn btn-secondary hover-boxshadow me-1"
                href="@Url.Action("index")">@Resource.BackToList</a>
            <a class="btn form-btn btn-primary hover-boxshadow"
                href="@Url.Action("edit", new { Id = Model.SupplierId})">@Resource.Edit @ViewBag.ModuleName</a>
        </div>
    </div>
</section>
