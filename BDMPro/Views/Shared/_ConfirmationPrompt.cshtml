@using BDMPro.Resources
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 pt-4">
                <button type="button" class="btn-close fs-20" data-bs-dismiss="modal" aria-label="Close">X</button>
            </div>
            <div class="modal-body border-0 pb-4">
                <div class="mt-2 text-center">
                    <i class="fa-solid fa-trash-can text-delete fs-1"></i>
                    <div class="mt-3 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4 class="fs-22 fw600">@Resource.AreyouSureToDeleteThisRecord</h4>
                        <h5 class="fs-20 text-delete"><span id="record-to-delete"></span></h5>
                        <p class="fs-15 text-muted mx-3 mb-0 pt-1">@Resource.Thiscannotbeundone</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-3">
                    <button type="button" class="btn small btn-light hover-boxshadow" data-bs-dismiss="modal">@Resource.Close</button>
                    <button type="button" class="btn small btn-danger hover-boxshadow" id="confirmed-deletebtn">@Resource.YesDeleteIt</button>
                </div>
            </div>
        </div>
    </div>
</div>

